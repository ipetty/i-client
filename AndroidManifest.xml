<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ipetty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="net.ipetty.android.common.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IPettyTheme" >
        <activity
            android:name="net.ipetty.android.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/IPettyTheme.NoTitleBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.ipetty.android.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.WelcomeRegisterOrLoginActivity"
            android:label="@string/title_activity_welcome_register_or_login" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.LoginHasAccountActivity"
            android:label="@string/title_activity_login_has_account" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.CommentActivity"
            android:label="@string/title_activity_comment" >
        </activity>
        <activity
            android:name="net.ipetty.LoginsActivity"
            android:label="@string/title_activity_logins"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="net.ipetty.android.ui.FeedPublishActivity"
            android:label="@string/title_activity_feed_publish" >
        </activity>
        <activity
            android:name="net.ipetty.LargerImageActivity"
            android:label="@string/title_activity_larger_image" >
        </activity>
    </application>

</manifest>
