<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPopDialog" >
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"  
       android:layout_marginTop="44dp">
    	<LinearLayout
    	    android:id="@+id/main_dialog_layout"
	      	android:layout_width="220dp"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentTop="true"
        	android:orientation="vertical"
        	android:paddingTop="8dp"
        	android:paddingBottom="8dp"
        	android:background="@drawable/modal_bg" >

    		<LinearLayout
    		    android:id="@+id/menu_person_layout"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content">

    			<ImageView
    			    android:id="@+id/avatar"
    			    android:layout_width="32dp"
    			    android:layout_height="32dp"
    			    android:layout_gravity="center_vertical"
    			    android:layout_marginLeft="8dp"
    			   />

    			<TextView
    			    android:id="@+id/username"
    			    android:layout_width="wrap_content"
    			    android:layout_height="wrap_content"
    			    android:padding="8dp"
    			    android:textColor="#222"
    			     android:text="@string/nav_menu_space"
    			    android:textSize="18sp" />
    		    
    		</LinearLayout>
    		<LinearLayout
    		    android:id="@+id/menu_feedback_layout"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		   >

    			<ImageView
    			    android:id="@+id/imageView2"
    			    android:layout_width="32dp"
    			    android:layout_height="32dp"
    			    android:layout_gravity="center_vertical"
    			    android:layout_marginLeft="8dp"
    			   />

    			<TextView
    			    android:layout_width="wrap_content"
    			    android:layout_height="wrap_content"
    			    android:padding="8dp"
    			    android:text="@string/nav_menu_feedback"
    			    android:textColor="#222"
    			    android:textSize="18sp" />    		    
    		</LinearLayout>
    		
    

       </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
