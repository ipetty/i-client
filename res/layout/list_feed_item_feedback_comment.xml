<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/row_feed_photo_comment_item" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_marginBottom="0dp">
    <ImageView 
        android:id="@+id/row_feed_glyph" 
        android:src="@drawable/avatar" 
        android:paddingTop="2.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/row_feed_textview_comments_item"
        android:layout_toRightOf="@id/row_feed_glyph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.0dip"
        android:autoLink="all"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textColorLink="@color/link_text" />
</RelativeLayout>
    
