<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="IPettyBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="IPettyTheme" parent="IPettyBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
          <item name="android:windowNoTitle">true</item>
    </style>
    
    
    
    <style name="IPettyTheme.NoTitleBar.FullScreen" parent="IPettyTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    
    <style name="VersionText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#999999</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    
    <style name="ActionBarButton">
        <item name="android:background">@drawable/action_bar_button_background</item>
        <item name="android:layout_width">@dimen/action_bar_height</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
