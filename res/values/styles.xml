<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="IPettyBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="IPettyTheme" parent="IPettyBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="IPettyTheme.NoTitleBar.FullScreen" parent="IPettyTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="VersionText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#999999</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="ActionBarButton">
        <item name="android:background">@drawable/action_bar_button_background</item>
        <item name="android:layout_width">@dimen/action_bar_height</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="PopDialog" parent="android:style/Theme.Holo.Light.Dialog" >
        <item name="android:windowBackground">@drawable/modal_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="MenuPopDialog"  parent="PopDialog" >
        <item name="android:windowBackground">@drawable/trans</item>
        <item name="android:windowAnimationStyle">@style/nav_menu_animation</item>
    </style>
    
    <style name="nav_menu_animation">
        <item name="android:windowEnterAnimation">@anim/grow_animation</item>
        <item name="android:windowExitAnimation">@anim/shrink_animation</item>
    </style>
    
    <style name="SelectPopDialog" parent="PopDialog" >
    </style>
    
    <style name="BottomPopDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
    
    



</resources>
